<section class="brownBox" id="longRollers">
<div class="container">
  <h3>Send A message to Us</h3>
  <div class="borderThick clearer"></div>
            <div class="addBookHold">
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true, class: "form-control" %>
    <%= f.input :email, :required => true, class: "form-control" %>
    <%= f.input :message, :as => :text, :input_html => { :rows => "12" }, :required => true, class: "form-control" %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div class="form-buttons">
      </br>
      <%= f.button :submit, 'Send message', :class=> "roundButton greenButton"%>
    </div>
  <% end %>
</div><!-- end addBookHold -->
</div><!-- end container -->
</section
