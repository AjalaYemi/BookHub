<div class="row">
<div class="col-md-6">
  <h3>Send A message to Us</h3>
  
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :message, :as => :text, :input_html => { :rows => "12" }, :required => true %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-success" %>
    </div>
  <% end %>
</div><!-- end col-md-6 -->
<div class="col-md-6">
  <h3> Our Address Goes Here </h3>
  <address>
    # Address
  </address>
</div><!-- end col-md-6 -->
</div><!-- end row -->
<br />