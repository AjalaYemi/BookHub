<!DOCTYPE html>
<html>
	<head>
	  <title>BookHub Nigeria <%= " | #{@page_title} " if @page_title %></title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>	
	</head>
	<body>
		<div id="header">
			<h1>BookHub Nigeria
			</h1>
		</div>
		<div id="main">
			<div id="navigation">
				<%= render(:partial => 'layouts/navigation', :locals =>{:authors => @authors}) %>
			</div>
			<div id="content">
				<%= yield %>
			</div>
		</div>
		<div class="clear"></div>
		<div id="footer">
			<p id="copyright">&copy; BookHub Nigeria Limited</p>
		</div>
	</body>
</html>
