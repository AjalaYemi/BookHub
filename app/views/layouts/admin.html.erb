<!DOCTYPE html>
<html>
	<head>
	  <title>BookHub Nigeria<%= " | #{@page_title} " if @page_title %></title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>	
	</head>
	<body>
		<div id="header">
			<h1><%= link_to "BookHub Nigeria Admin", root_path %></h1>
		</div>
		<div id="main">
			<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>	
			<% end %>
			<div id="content">
				<%= yield %>
			</div>
		</div>
		<div id="footer">
			<p id="copyright">&copy;<%= Date.today.year.to_s %> BookHub Nigeria Limited</p>
		</div>
	</body>
</html>
