<% @page_title = "All Genres" %>
<%= link_to("<< Back to Admin Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>
<div class = "genres index">
	<h2>Genres</h2>
	<%=  %>
	<%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Genre", {:action => 'new'}, :class => 'action new') %>

	
	<table class="listing" summary="Genre list">
		<tr class="header">			
			<th>Genres</th>
			<th>Actions</th>
		</tr>
		<% @genres.each do |genre| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= genre.genre %></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => genre.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => genre.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => genre.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
