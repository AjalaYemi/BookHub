<% @page_title = "Review by #{@review.user.name} "%>
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>
<div class="review show">
	<h2>Review: <%= @review.title %></h2>
	<h4>Review by <%= @review.user.name %></h4>
	<table summary="review detail view">
		<tr>
			<th>Review</th>
			<td><%= @review.review %></td>
		</tr>
		<tr>
			<th>Book</th>
			<td><%= @review.book.name %></td>
		</tr>
	</table>
</div>