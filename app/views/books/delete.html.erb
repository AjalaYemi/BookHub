<% @page_title = " Delete #{@book.name} ?" %>
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="book delete">
	<h2>Delete Book</h2>

	
		<p>Are you sure you want to permanently delete this Book?</p>

		<p class="reference-name"><%= @book.name %></p>

		<div class="form-buttons">
			<%= button_to("Delete Book", { :action => 'destroy', :id => @book.id}, method: :delete, data: {confirm: 'Are you sure?'},  :class => 'btn btn-danger btn-lg') %>
		</div>
	
</div>
