<% @page_title = " Delete #{@book.name} ?" %>
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="book delete">
	<h2>Delete Book</h2>

	<%= form_for(:book, :url => {:controller => 'books', :action => 'destroy', :id => @author.id}) do |f| %>
		<p>Are you sure you want to permanently delete this subject?</p>

		<p class="reference-name"><%= @book.name %></p>

		<div class="form-buttons">
			<%= submit_tag("Delete Book") %>
		</div>
	<% end %>
</div>
