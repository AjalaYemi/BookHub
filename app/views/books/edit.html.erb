<% @page_title = " Editing #{@book.name}" %>
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="book edit">
	<h2>Update Book</h2>

	<%= form_for(:book, :url => {:action => 'update', :id => @book.id}) do |f| %>
	 
		<%= render(:partial => "form", :locals => {:f => f}) %>

		<div class="form-buttons">
			<%= submit_tag("Update Book") %>
		</div>
	<% end %>
</div>
