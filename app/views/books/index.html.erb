<% @page_title = "All Books" %>
<%= link_to("<< Back to Admin Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>
<div class = "books index">
	<h2>Books</h2>
	<%=  %>
	<%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Book", {:action => 'new'}, :class => 'action new') %>

	
	<table class="listing" summary="Book list">
		<tr class="header">			
			<th>Name</th>
			<th>Author</th>
			<th>Publisher</th>
			<th>Page Count</th>
			<th>Word Count</th>
			<th>ISBN</th>
			<th>Published</th>
			<th>Actions</th>
		</tr>
		<% @books.each do |book| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= book.name %></td>
			<% if book.authors.empty? %>
				<td> nil </td>
			<% else %>
				<td><% book.authors.each do |author| %>
				<%= author.name %>,
				<% end %></td>
			<% end %>
			<td><%= book.publisher %></td>
			<td><%= book.page_count %></td>
			<td><%= book.word_count %></td>
			<td><%= book.isbn %></td>
			<td><%= book.published_year %></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => book.id}, :class => 'actionbtn btn-primary btn-lg') %>
				<%= link_to("Edit", {:action => 'edit', :id => book.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => book.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>