<% error_messages_for(@author) %>
<table summary="Author form fields">
			<tr>
				<th><%= f.label(:first_name) %></th>
				<td><%= f.text_field(:first_name) %></td>
			</tr>
			<tr>
				<th><%= f.label(:last_name) %></th>
				<td><%= f.text_field(:last_name) %></td>
			</tr>
			<tr>
				<th><%= f.label(:bio) %></th>
				<td><%= f.text_area(:bio, :size => "40x10") %></td>
			</tr>
			<tr>
				<th><%= f.label(:avatar, "Author Picture") %></th>
				<td><%= image_tag(@author.avatar_url(:thumb)) if @author.avatar? %>
					<%= f.file_field(:avatar) %></td>
				 <%= f.hidden_field(:avatar_cache) %>
			</tr>			
		</table>